rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isDeviceOwner(deviceId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/devices/$(deviceId)).data.owner == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Zones collection - Public read for devices, Admin write
    match /zones/{zoneId} {
      allow read: if true; // Devices need to read zones
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Devices collection
    match /devices/{deviceId} {
      allow read: if isDeviceOwner(deviceId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isDeviceOwner(deviceId) || isAdmin();
      allow delete: if isDeviceOwner(deviceId) || isAdmin();
    }

    // Geofence logs - Write by devices, read by admins
    match /geofence_logs/{logId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin() || 
        (isAuthenticated() && resource.data.deviceOwner == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    // Configurations - Admin only
    match /config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}